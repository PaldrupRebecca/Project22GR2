@page
@model Project22GR2.Pages.Members.EditMemberModel
@{
    ViewData["Title"] = "Edit Member";
}
<h1>Edit Member</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="@Model.Member.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="control-label"></label>
                <input asp-for="@Model.Member.Name" class="control-label" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="control-label" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="control-label"></label>
                <input asp-for="@Model.Member.Email" class="control-label" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save updated member" asp-page-handler="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>