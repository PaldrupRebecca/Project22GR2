@page
@model Project22GR2.Pages.Members.CreateMemberModel
@{
    ViewData["Title"] = "Create Member";
}
<h1>Create Member</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Member.Id" class="control-label"></label>
                <input asp-for="@Model.Member.Id" class="control-label" />
                <span asp-validation-for="Member.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="control-label"></label>
                <input asp-for="@Model.Member.Name" class="control-label" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="control-label" />
                <span asp-validation-for="Member.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="control-label"></label>
                <input asp-for="@Model.Member.Email" class="control-label" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Password" class="control-label"></label>
                <input asp-for="@Model.Member.Password" class="control-label" />
                <span asp-validation-for="Member.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create a new Member" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>