@page
@model Project22GR2.Pages.Members.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="container p-3 my-3 border" style="width:25%">
    <h3 class="text-center">Login</h3>
    <p class="text-danger">@Model.AccessDenied</p>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Member.Email" class="control-label"></label>
            <input asp-for="@Model.Member.Email" class="form-control" />
            <span asp-validation-for="@Model.Member.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Member.Password" class="control-label"></label>
            <input asp-for="@Model.Member.Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Member.Password" class="text-danger"></span>
        </div>
        <div class="form-check-group">
            <input type="submit" value="Login with email" class="btn-block btn btn-primary" />
        </div>
    </form>
    <p>
        <a asp-page="/Members/CreateMember" class="btn-block btn btn-primary">Register</a>
    </p>
</div>