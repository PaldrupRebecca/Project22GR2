@page
@model Project22GR2.Pages.Bookings.EditBookingModel
@{
    ViewData["Title"] = "Edit Booking";
}
<h1>Edit Booking</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="@Model.Booking.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="@Model.Booking.BoatId" class="control-label"></label>
                <input asp-for="@Model.Booking.BoatId" class="control-label" />
                <span asp-validation-for="Booking.BoatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.MemberId" class="control-label"></label>
                <input asp-for="@Model.Booking.MemberId" class="control-label" />
                <span asp-validation-for="Booking.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Booking.DateTime" class="control-label"></label>
                <input asp-for="@Model.Booking.DateTime" class="control-label" />
                <span asp-validation-for="Booking.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save updated booking" asp-page-handler="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
