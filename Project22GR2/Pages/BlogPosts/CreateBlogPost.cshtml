@page
@model Project22GR2.Pages.BlogPosts.CreateBlogPostModel
@{
    ViewData["Title"] = "CreateBlogPost";
}

<h1>Create Blog Post</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for=@Model.BlogPost.Id type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.BlogPost.Title" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Title" class="form-control" />
                <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BlogPost.Author" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Author" class="form-control" />
                <span asp-validation-for="BlogPost.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BlogPost.Description" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Description" class="form-control" />
                <span asp-validation-for="BlogPost.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BlogPost.Content" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Content" class="form-control" />
                <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create a new Blog Post" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-page="Index">Back to Blog</a>
        </div>
    </div>
</div>