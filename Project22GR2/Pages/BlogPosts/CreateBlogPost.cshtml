@page
@model Project22GR2.Pages.BlogPosts.CreateBlogPostModel
@{
    ViewData["Title"] = "CreateBlogPost";
}

<h1>Create Blog Post</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.BlogPost.Name"></label>
                    <input asp-for="@Model.BlogPost.Name" />
                    <span asp-validation-for="BlogPost.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BlogPost.Description"></label>
                    <input asp-for="@Model.BlogPost.Description" />
                    <span asp-validation-for="BlogPost.Description" class="text-danger"></span>
                </div>
                <input type="submit" value="Create a new Blog Post" class="btn btn-primary" />
        </form>
    </div>
</div>