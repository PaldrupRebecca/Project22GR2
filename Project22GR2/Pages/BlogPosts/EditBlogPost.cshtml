@page
@model Project22GR2.Pages.BlogPosts.EditBlogPostModel
@{
    ViewData["Title"] = "EditBlogPost";
}

<h1>Edit Blog Post</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <input asp-for="@Model.BlogPost.Id" type="hidden" class="control-label" />
                <input asp-for="@Model.BlogPost.Author" type="hidden" class="control-label" />
            </div>
                        <div class="form-group">
                <label asp-for="@Model.BlogPost.Title" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Title" class="form-control" />
                <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BlogPost.Description" class="control-label"></label>
                <input asp-for="@Model.BlogPost.Description" class="form-control" />
                <span asp-validation-for="BlogPost.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="custom-control-label">Content:</label>
                <textarea asp-for="@Model.BlogPost.Content" cols="120" rows="12" class="form-control"></textarea>
                <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Updated Blog Post" class="btn btn-primary" />
            </div>
            <a asp-page="Index">Cancel</a>
        </form>
    </div>
</div>