@model Project22GR2.Pages.Events.JoinedEventsModel
@{
    ViewData["Title"] = "Joined events";
}

<h1>List of events</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Member id</th>
            <th>Member name</th>
            <th>Event id</th>
            <th>Event name</th>
            <th>Event time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JoinEvents)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.MemberId</td>
                <td>@item.MemberName</td>
                <td>@item.EventId</td>
                <td>@item.EventName</td>
                <td>@item.EventDate</td>
