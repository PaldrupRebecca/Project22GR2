@page
@model Project22GR2.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "Edit Boat";
}
<h1>Edit event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="@Model.Boat.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="@Model.Boat.Id" class="control-label"></label>
                <input asp-for="@Model.Boat.Id" class="control-label" />
                <span asp-validation-for="Boat.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Type" class="control-label"></label>
                <input asp-for="@Model.Boat.Type" class="control-label" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Length" class="control-label"></label>
                <input asp-for="@Model.Boat.Length" class="control-label" />
                <span asp-validation-for="Boat.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Width" class="control-label"></label>
                <input asp-for="@Model.Boat.Width" class="control-label" />
                <span asp-validation-for="Boat.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Weight" class="control-label"></label>
                <input asp-for="@Model.Boat.Weight" class="control-label" />
                <span asp-validation-for="Boat.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Sail" class="control-label"></label>
                <input asp-for="@Model.Boat.Sail" class="control-label" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save updated boat" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete boat" asp-page-handler="Delete" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
</div>
